{
  "meta": { "notes": "Patterns first, then keyword contains, then TF-IDF, then LLM." },

  "type_text": {
    "patterns": ["(?i)^(type|write|dictate)\\s+(?P<text>.+)$"],
    "examples": ["type hello team", "write this down"]
  },

  "open_gmail": { "examples": ["open gmail", "go to gmail", "open my email"] },

  "set_browser": {
    "patterns": [
      "(?i)^(?:set|use|prefer)\\s+(?P<browser>safari|chrome)\\s+(?:as\\s+)?(?:my\\s+)?browser$",
      "(?i)^switch\\s+browser\\s+to\\s+(?P<browser>safari|chrome)$",
      "(?i)^switch\\s+to\\s+(?P<browser>safari|chrome)$"
    ],
    "examples": [
      "use safari as my browser",
      "set browser chrome",
      "switch to safari"
    ],
    "slots": { "browser": "(safari|chrome)" }
  },

  "compose_email": {
    "patterns": [
      "(?i)^compose\\s+(?:an\\s+)?email\\s+to\\s+(?P<to>[^\\s]+)\\s+subject\\s+(?P<subject>.+?)\\s+body\\s+(?P<body>.+)$",
      "(?i)^email\\s+(?P<to>[^\\s]+)\\s+subject\\s+(?P<subject>.+?)\\s+body\\s+(?P<body>.+)$"
    ],
    "examples": [
      "compose email to alice@example.com subject project update body pushing the deck tonight",
      "email bob@foo.io subject check in body did you see my note"
    ],
    "slots": {
      "to": "([^\\s]+)",
      "subject": "(.+)",
      "body": "(.+)"
    }
  },

  "send_email": {
    "patterns": [
      "(?i)^send\\s+email$",
      "(?i)^send$",
      "(?i)^send\\s+email\\s+to\\s+(?P<to>[^\\s]+)\\s+subject\\s+(?P<subject>.+?)\\s+body\\s+(?P<body>.+)$"
    ],
    "examples": [
      "send email",
      "send",
      "send email to team@acme.com subject standup body blocker on api rollout"
    ],
    "slots": {
      "to": "([^\\s]+)",
      "subject": "(.+)",
      "body": "(.+)"
    }
  },

  "open_url": {
    "patterns": ["(?i)^(open|go to|navigate to)\\s+(?P<url>[^\\s]+)$"],
    "examples": ["open twitter.com", "go to github", "navigate to notion"]
  },

  "open_app": {
    "patterns": ["(?i)^(open|launch|start)\\s+(?P<app>.+)$"],
    "examples": ["open chrome", "launch safari", "start keynote"]
  },

